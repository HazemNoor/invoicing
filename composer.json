{
    "name": "hazemnoor/invoicing",
    "description": "A simple invoicing system",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "Hazem Noor",
            "email": "hazemnoor@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "autoload": {
        "psr-4": {
            "Invoicing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Invoicing\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpcs",
            "./vendor/bin/phpunit"
        ],
        "coverage": [
            "./vendor/bin/phpunit --coverage-html .code-coverage"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    }
}
